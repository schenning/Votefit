<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"


    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.schei.votefit.ProfileActivity"
    android:background="@drawable/logo">

    <ImageView
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/image"
        android:scaleType="centerCrop"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your rating"
        android:id="@+id/textView3"
        android:layout_centerInParent="true"
        android:layout_above="@+id/up"
        android:background="@drawable/votetextbackground"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/button"
        android:onClick="goToVote"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/image"
        android:layout_alignEnd="@+id/image"
        android:background="@drawable/profbutt"

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Help"
        android:id="@+id/button3"
        android:layout_alignParentBottom="true"

        android:layout_alignLeft="@+id/image"
        android:layout_alignStart="@+id/image"
        android:onClick="goToHelp"
        android:background="@drawable/profbutt"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/up"
        android:layout_alignTop="@+id/button3"
        android:layout_alignRight="@+id/image"
        android:layout_alignEnd="@+id/image"
        android:background="@drawable/profbutt"
        />

</RelativeLayout>
